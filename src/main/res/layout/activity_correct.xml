<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.a10609516.app.DepartmentAndDIY.CorrectActivity">

        <LinearLayout
            android:layout_width="346dp"
            android:layout_height="97dp"
            android:orientation="vertical"
            android:weightSum="1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/linearLayout20">

            <TextView
                android:id="@+id/titletextView"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:gravity="center"
                android:text="上傳日報紀錄"
                android:textColor="@color/colorAccent"
                android:textSize="30dp"
                tools:layout_editor_absoluteX="21dp"
                tools:layout_editor_absoluteY="-183dp" />

            <TextView
                android:id="@+id/directiontextView"
                android:layout_width="match_parent"
                android:layout_height="17dp"
                android:gravity="top|center"
                android:text="日報上傳異動"
                android:textSize="15dp"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="81dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="346dp"
            android:layout_height="55dp"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout20"
            android:id="@+id/linearLayout21">

            <TextView
                android:id="@+id/datetextView"
                android:layout_width="90dp"
                android:layout_height="55dp"
                android:layout_weight="0.16"
                android:gravity="center"
                android:text="上傳日期:"
                android:textSize="20dp" />

            <Button
                android:id="@+id/datebutton"
                android:layout_width="130dp"
                android:layout_height="55dp"
                android:layout_weight="0.93"
                android:background="#F5F5F5"
                android:layout_gravity="center"
                android:onClick="showDatePickerDialog"
                android:text="" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout22"
            android:layout_width="346dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="vertical"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout21">

            <Button
                android:id="@+id/searchbutton"
                android:layout_width="143dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/button"
                android:text="查詢"
                android:textColor="#0000ff"
                android:textSize="20dp" />

            <TableLayout
                android:id="@+id/record_tablelayot"
                android:layout_width="350dp"
                android:layout_height="248dp"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:visibility="invisible"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

                <TableRow
                    android:layout_width="350dp"
                    android:layout_height="35dp"
                    tools:layout_editor_absoluteX="8dp"
                    tools:layout_editor_absoluteY="8dp">

                    <TextView
                        android:id="@+id/time_textView1"
                        android:layout_width="110dp"
                        android:layout_height="35dp"
                        android:layout_column="0"
                        android:layout_marginLeft="5dp"
                        android:gravity="center_vertical"
                        android:text="2017/09/29:"
                        android:textColor="@color/colorAccent" />

                    <TextView
                        android:layout_width="220dp"
                        android:layout_height="35dp"
                        android:layout_column="1"
                        android:layout_marginLeft="5dp"
                        android:gravity="center_vertical"
                        android:text="店名:"
                        android:textColor="@color/colorAccent" />


                </TableRow>

                <TableRow
                    android:layout_width="350dp"
                    android:layout_height="35dp"
                    tools:layout_editor_absoluteX="8dp"
                    tools:layout_editor_absoluteY="8dp">

                    <TextView
                        android:id="@+id/time_textView2"
                        android:layout_width="110dp"
                        android:layout_height="35dp"
                        android:layout_column="0"
                        android:layout_marginLeft="5dp"
                        android:gravity="center_vertical"
                        android:text="2017/09/30:"
                        android:textColor="@color/colorAccent" />

                    <TextView
                        android:layout_width="240dp"
                        android:layout_height="35dp"
                        android:layout_column="1"
                        android:layout_marginLeft="5dp"
                        android:gravity="center_vertical"
                        android:text="店名:"
                        android:textColor="@color/colorAccent" />


                </TableRow>

                <TableRow
                    android:layout_width="350dp"
                    android:layout_height="35dp"
                    tools:layout_editor_absoluteX="8dp"
                    tools:layout_editor_absoluteY="8dp">

                    <TextView
                        android:id="@+id/time_textView3"
                        android:layout_width="110dp"
                        android:layout_height="35dp"
                        android:layout_column="0"
                        android:layout_marginLeft="5dp"
                        android:gravity="center_vertical"
                        android:text="2017/10/01:"
                        android:textColor="@color/colorAccent" />

                    <TextView
                        android:layout_width="240dp"
                        android:layout_height="35dp"
                        android:layout_column="1"
                        android:layout_marginLeft="5dp"
                        android:gravity="center_vertical"
                        android:text="店名:"
                        android:textColor="@color/colorAccent" />


                </TableRow>

                <TableRow
                    android:layout_width="350dp"
                    android:layout_height="35dp"
                    tools:layout_editor_absoluteX="8dp"
                    tools:layout_editor_absoluteY="8dp">

                    <TextView
                        android:layout_width="110dp"
                        android:layout_height="35dp"
                        android:layout_column="0"
                        android:layout_marginLeft="5dp"
                        android:gravity="center_vertical"
                        android:text="2017/10/02:"
                        android:textColor="@color/colorAccent" />

                    <TextView
                        android:layout_width="240dp"
                        android:layout_height="35dp"
                        android:layout_column="1"
                        android:layout_marginLeft="5dp"
                        android:gravity="center_vertical"
                        android:text="店名:"
                        android:textColor="@color/colorAccent" />

                </TableRow>

                <TableRow
                    android:layout_width="350dp"
                    android:layout_height="35dp"
                    tools:layout_editor_absoluteX="8dp"
                    tools:layout_editor_absoluteY="8dp">

                    <TextView
                        android:layout_width="110dp"
                        android:layout_height="35dp"
                        android:layout_column="0"
                        android:layout_marginLeft="5dp"
                        android:gravity="center_vertical"
                        android:text="2017/10/03:"
                        android:textColor="@color/colorAccent" />

                    <TextView
                        android:layout_width="240dp"
                        android:layout_height="35dp"
                        android:layout_column="1"
                        android:layout_marginLeft="5dp"
                        android:gravity="center_vertical"
                        android:text="店名:"
                        android:textColor="@color/colorAccent" />

                </TableRow>

                <TableRow
                    android:layout_width="350dp"
                    android:layout_height="35dp"
                    tools:layout_editor_absoluteX="8dp"
                    tools:layout_editor_absoluteY="8dp">

                    <TextView
                        android:layout_width="110dp"
                        android:layout_height="35dp"
                        android:layout_column="0"
                        android:layout_marginLeft="5dp"
                        android:gravity="center_vertical"
                        android:text="2017/10/04:"
                        android:textColor="@color/colorAccent" />

                    <TextView
                        android:layout_width="240dp"
                        android:layout_height="35dp"
                        android:layout_column="1"
                        android:layout_marginLeft="5dp"
                        android:gravity="center_vertical"
                        android:text="店名:"
                        android:textColor="@color/colorAccent" />

                </TableRow>

                <TableRow
                    android:layout_width="350dp"
                    android:layout_height="35dp"
                    tools:layout_editor_absoluteX="8dp"
                    tools:layout_editor_absoluteY="8dp">

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="110dp"
                        android:layout_height="35dp"
                        android:layout_column="0"
                        android:layout_marginLeft="5dp"
                        android:gravity="center_vertical"
                        android:text="2017/10/05:"
                        android:textColor="@color/colorAccent" />

                    <TextView
                        android:layout_width="240dp"
                        android:layout_height="35dp"
                        android:layout_column="1"
                        android:layout_marginLeft="5dp"
                        android:gravity="center_vertical"
                        android:text="店名:"
                        android:textColor="@color/colorAccent" />

                </TableRow>
            </TableLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="346dp"
            android:layout_height="150dp"
            android:background="@drawable/warningline"
            android:orientation="vertical"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout22">


            <TextView
                android:id="@+id/directiontextView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="使用說明\n"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/detailtextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="1.進入專櫃或通路時，請先行定位打卡於1公里內。\n2.有打卡商品時，就須於當日完成已賣之商品。\n3.預購商品，可以填寫單據拍照上傳照片，每日於下午17:00止，管理部會於下班前回覆上傳照片內容。" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout24"
            android:layout_width="346dp"
            android:layout_height="71dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="0dp"
            android:orientation="vertical"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout1">

            <TextView
                android:id="@+id/warningtextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="公司系統資訊 請勿外流於非他人使用與查詢" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
